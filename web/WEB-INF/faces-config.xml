<?xml version='1.0' encoding='UTF-8'?>
<faces-config version="2.2" xmlns="http://xmlns.jcp.org/xml/ns/javaee"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee 
    http://xmlns.jcp.org/xml/ns/javaee/web-facesconfig_2_2.xsd">
    <application>
        <locale-config>
            <default-locale>pl</default-locale>
            <supported-locale>pl</supported-locale>
            <supported-locale>en</supported-locale>
        </locale-config>
        <resource-bundle>
            <base-name>i18n.messages</base-name>
            <var>msg</var>
        </resource-bundle>
    </application>
    <navigation-rule>
        <from-view-id>*</from-view-id>
        <navigation-case>
            <from-outcome>index</from-outcome>
            <to-view-id>/index.xhtml</to-view-id>
            <redirect/>
        </navigation-case>
        <navigation-case>
            <from-outcome>registerDeveloper</from-outcome>
            <to-view-id>/accounts/registerDeveloper.xhtml</to-view-id>
            <redirect/>
        </navigation-case>
        <navigation-case>
            <from-outcome>registerUser</from-outcome>
            <to-view-id>/accounts/registerUser.xhtml</to-view-id>
            <redirect/>
        </navigation-case>
        <navigation-case>
            <from-outcome>successDeveloper</from-outcome>
            <to-view-id>/accounts/developerSuccess.xhtml</to-view-id>
        </navigation-case>
        <navigation-case>
            <from-outcome>successUser</from-outcome>
            <to-view-id>/accounts/userSuccess.xhtml</to-view-id>
        </navigation-case>
        <navigation-case>
            <from-outcome>addReview</from-outcome>
            <to-view-id>/developer/addReview.xhtml</to-view-id>
            <redirect/>
        </navigation-case>
        <navigation-case>
            <from-outcome>login</from-outcome>
            <to-view-id>/login/login.xhtml</to-view-id>
            <redirect/>
        </navigation-case>
        <navigation-case>
            <from-outcome>activateAccount</from-outcome>
            <to-view-id>/admin/activateAccount.xhtml</to-view-id>
            <redirect/>
        </navigation-case>
        <navigation-case>
            <from-outcome>activateUserAccount</from-outcome>
            <to-view-id>/admin/activateUserAccount.xhtml</to-view-id>
            <redirect/>
        </navigation-case>
        <navigation-case>
            <from-outcome>deleteAccount</from-outcome>
            <to-view-id>/admin/deleteAccount.xhtml</to-view-id>
            <redirect/>
        </navigation-case>
        <navigation-case>
            <from-outcome>deleteUserAccount</from-outcome>
            <to-view-id>/admin/deleteUserAccount.xhtml</to-view-id>
            <redirect/>
        </navigation-case>
        <navigation-case>
            <from-outcome>myReviews</from-outcome>
            <to-view-id>/developer/myReviews.xhtml</to-view-id>
            <redirect/>
        </navigation-case>
        <navigation-case>
            <from-outcome>reviewDisplaySite</from-outcome>
            <to-view-id>/review/displayReview.xhtml</to-view-id>
            <redirect/>
        </navigation-case>
        <navigation-case>
            <from-outcome>addMeetingToReview</from-outcome>
            <to-view-id>/review/addMeeting.xhtml</to-view-id>
            <redirect/>
        </navigation-case>
        <navigation-case>
            <from-outcome>editReview</from-outcome>
            <to-view-id>/review/editReview.xhtml</to-view-id>
            <redirect/>
        </navigation-case>
        <navigation-case>
            <from-outcome>editDeveloper</from-outcome>
            <to-view-id>/developer/editDeveloper.xhtml</to-view-id>
            <redirect/>
        </navigation-case>
        <navigation-case>
            <from-outcome>editUser</from-outcome>
            <to-view-id>/user/editUser.xhtml</to-view-id>
            <redirect/>
        </navigation-case>
        <navigation-case>
            <from-outcome>passwordChange</from-outcome>
            <to-view-id>/accounts/changePassword.xhtml</to-view-id>
            <redirect/>
        </navigation-case>
        <navigation-case>
            <from-outcome>displayResults</from-outcome>
            <to-view-id>/search/displaySearchedResults.xhtml</to-view-id>
            <redirect/>
        </navigation-case>
        <navigation-case>
            <from-outcome>displaySelected</from-outcome>
            <to-view-id>/search/displayingFoundReview.xhtml</to-view-id>
            <redirect/>
        </navigation-case>
    </navigation-rule>
</faces-config>